<div class="panel panel-default post-form-panel">
      <div class="panel-body row">

        <div class="col-sm-1">
        <img src="/avatar.png" class="rounded-img" alt="" height="35px" width="35px">
        </div>
        <div class="col-sm-11">
        <%= form_for(@newPost) do |f| %>
        <center>
  <div class="field" style="margin-left: 10px;">
    <%= f.text_field :content, autofocus: true, class: "form-control" %>
    <span type="button" style="float: right; margin-top: 3px;" class="btn btn-submit"><%= f.submit "Add Post", class: "btn btn-primary" %></span>
  </div>

  <div class="actions">

  </div>
<center>
<% end %>
        </div>
      </div>
    </div>


